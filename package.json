{
  "name": "tumau",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "benchmarks",
    "scripts",
    "tests"
  ],
  "keywords": [
    "node",
    "server",
    "ts"
  ],
  "repository": "git@github.com:etienne-dldc/tumau.git",
  "author": "Etienne Dldc <e.deladonchamps@gmail.com>",
  "scripts": {
    "build": "lerna run build --stream",
    "test": "CI=true lerna run test --stream",
    "typecheck": "lerna exec --stream --scope '{@tumau,@tumau-example}/**' 'tsc --noEmit'",
    "norm": "lerna exec --stream -- '$LERNA_ROOT_PATH/node_modules/.bin/ts-node --project $LERNA_ROOT_PATH/scripts/tsconfig.json $LERNA_ROOT_PATH/scripts/src/norm.ts'",
    "benchmark": "ts-node --files --project ./scripts/tsconfig.json ./scripts/src/benchmark.ts",
    "pub": "yarn build && yarn test && lerna publish",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  }
}
