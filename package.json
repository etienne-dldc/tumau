{
  "name": "tumau",
  "private": true,
  "keywords": [
    "node",
    "server",
    "ts"
  ],
  "repository": "git@github.com:etienne-dldc/tumau.git",
  "author": "Etienne Dldc <e.deladonchamps@gmail.com>",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build:docs": "pnpm run export --filter docs",
    "build": "pnpm run -r build",
    "test": "pnpm run -r test",
    "typecheck:all": "pnpm recursive exec --filter '@tumau/*' --filter '@tumau-example/*' -- pnpx tsc --noEmit",
    "norm": "echo 'TODO'",
    "norm:core": "echo 'TODO'",
    "benchmark": "ts-node --files --project ./scripts/tsconfig.json ./scripts/src/benchmark.ts",
    "pub": "pnpm run build && pnpm run test && pnpm -r publish",
    "lint": "eslint .",
    "generate-readme": "ts-node --files --project ./scripts/tsconfig.json ./scripts/src/generateReadme.ts",
    "changeset": "changeset",
    "changeset:version": "changeset version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.14.1",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.23.1",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
